<?xml version="1.0" encoding="utf-8"?>
<actions>
    <action intentName="com.taskly.intent.RECORD_ITEM">
        <parameter name="record.type" type="type.googleapis.com/com.taskly.RecordType" />
        <fulfillment urlTemplate="taskly://record/new">
            <parameter-mapping urlParameter="type" intentParameter="record.type" />
        </fulfillment>
    </action>
    
    <action intentName="actions.intent.OPEN">
        <fulfillment urlTemplate="taskly://record/new" />
    </action>
    
    <!-- custom voice commands -->
    <action intentName="com.taskly.intent.QUICK_RECORD">
        <fulfillment 
            urlTemplate="taskly://record/new"
            fulfillmentMode="actions.fulfillment.DEEPLINK" />
    </action>
</actions>