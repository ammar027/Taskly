{
  "name": "Taskly",
  "displayName": "Taskly",
  "expo": {
    "name": "Taskly",
    "slug": "Taskly",
    "scheme": "taskly",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "icon": "./assets/icons/icon.png",
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "newArchEnabled": true,
    "jsEngine": "hermes",
    "assetBundlePatterns": ["**/*"],
    "android": {
      "package": "com.taskly",
      "permissions": ["RECORD_AUDIO"],
      "adaptiveIcon": {
        "foregroundImage": "./assets/icons/adaptive-icon.png",
        "monochromeImage": "./assets/icons/adaptive-icon-dark.png",
        "backgroundColor": "#ecedee"
      },
      "intentFilters": [
        {
          "action": "android.intent.action.VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "taskly"
            }
          ],
          "category": ["android.intent.category.DEFAULT", "android.intent.category.BROWSABLE"]
        }
      ]
    },
    "ios": {
      "icon": "./assets/images/app-icon-ios.png",
      "supportsTablet": true,
      "bundleIdentifier": "com.taskly"
    },
    "web": {
      "favicon": "./assets/images/app-icon-web-favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-localization",
      "expo-font",
      "expo-audio",
      [
        "react-native-edge-to-edge"
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/icons/splash-icon-light.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ecedee",
          "dark": {
            "image": "./assets/icons/splash-icon-light.png",
            "backgroundColor": "#151718"
          }
        }
      ],
      "expo-router",
      [
        "expo-quick-actions",
        {
          "androidIcons": {
            "ic_appaction": {
              "foregroundImage": "./assets/icons/add.png",
              "backgroundColor": "#000"
            }
          }
        }
      ],
      [
        "expo-speech-recognition",
        {
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone"
        }
      ]
    ],
    "experiments": {
      "tsconfigPaths": true,
      "typedRoutes": true
    },
    "extra": {
      "OPENAI_API_KEY": "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",
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "1f53892d-f5b6-43c6-86c4-1f11738ad3e5"
      }
    },
    "owner": "ammar001"
  },
  "ignite": {
    "version": "10.1.6"
  }
}
