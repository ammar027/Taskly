        <category android:name="android.intent.category.android.intent.category.DEFAULT"/>
        <category android:name="android.intent.category.android.intent.category.BROWSABLE"/>
      </intent-filter>
      <intent-filter data-generated="true">
        <action android:name="android.intent.action.com.taskly.intent.RECORD_ITEM"/>
        <data android:scheme="taskly" android:host="record" android:path="/new"/>
        <category android:name="android.intent.category.android.intent.category.DEFAULT"/>
      </intent-filter>
      <intent-filter data-generated="true">
        <action android:name="android.intent.action.com.taskly.intent.QUICK_RECORD"/>
        <data android:scheme="taskly" android:host="record" android:path="/new"/>
        <category android:name="android.intent.category.android.intent.category.DEFAULT"/>
      </intent-filter>
    </activity>
  </application>
